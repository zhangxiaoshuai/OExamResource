@{
    ViewBag.Title = "试用信息";
    Layout = "~/Views/Shared/_Back.cshtml";
}
@section SubHead{
    <script src="@Url.Content("~/Scripts/views/manage/schoollist.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugin/My97DatePicker/WdatePicker.js")" type="text/javascript"></script>
    <style type="text/css">
        #divSchoolList td
        {
            height: 20px;
        }
    </style>
}
<h2>
    试用信息</h2>
<input type="hidden" name="hdSchoolId" id="hdSchoolId" value="@ViewBag.SchoolId" />
<input type="hidden" id="hdCount" value="@ViewBag.count" />
<table width="100%" border="0" cellpadding="0" cellspacing="10">
    <tr>
        <td align="center" style="height: 20px" width="20%">
            销售人员：
        </td>
        <td width="10%">
            @Html.DropDownList("ddlSeller", ViewBag.Sell as List<SelectListItem>)
        </td>
        <td width="5%">
        </td>
        <td>
        </td>
    </tr>
    <tr>
        <td align="center" style="height: 20px">
            学校名称:
        </td>
        <td>
            <input type="text" name="txtName" id="txtName" value="" />
        </td>
        <td>
            <input type="button" name="btnSearchSchool" id="btnSearchSchool" value="搜索" />
        </td>
        <td>
            <input type="button" name="btnAdd" id="btnAdd" value="添加" />
        </td>
    </tr>
    <tr>
        <td colspan="4" style="vertical-align: top">
            <table border="0" cellpadding="0" cellspacing="0">
                <tr>
                    <td class="yan" valign="middle" align="left" style="height: 20px" colspan="2" width="960px">
                        全部列表
                    </td>
                </tr>
                <tr>
                    <td>
                        <div id="divSchoolList">
                        </div>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td colspan="4" align="center">
            <div id="divBar">
            </div>
        </td>
    </tr>
</table>
<div id="divAddSchool" style="display: none">
    <form id="form1" action="">
    <table border="0" cellpadding="0" cellspacing="5">
        <tr>
            <td>
                院校类型：
            </td>
            <td>
                <select id="ddlTier">
                    <option value="0" selected="selected">学校</option>
                    <option value="1">学院</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>
                名称：
            </td>
            <td>
                <input type="text" name="txtSchoolName" id="txtSchoolName" value="" /><strong id="sSchoolName"></strong>
            </td>
        </tr>
        <tr>
            <td>
                试用类型：
            </td>
            <td>
                @Html.DropDownList("ddlTrial", ViewBag.Trial as List<SelectListItem>)
            </td>
        </tr>
        <tr>
            <td>
                选择模块：
            </td>
            <td>
                <div style="margin-left: 20px" id="divModules">
                </div>
            </td>
        </tr>
        <tr>
            <td>
                IP地址：
            </td>
            <td>
                <textarea rows="4" cols="32" id="txtIP" style="resize: none" wrap="physical"></textarea>
                <br />
                多个IP地址请用 <strong style="color: Red">半角</strong> 逗号“ <strong style="color: Red">,</strong>
                ”分隔，如果是<br />
                连续的IP地址段请用“ <strong style="color: Red">-</strong> ”连接<br />
                （如192.168.0.0-192.168.0.100）。
            </td>
        </tr>
        <tr>
            <td>
                销售人员：
            </td>
            <td>
                @Html.DropDownList("ddlSell", ViewBag.Sell as List<SelectListItem>)
            </td>
        </tr>
        <tr>
            <td>
                到期时间：
            </td>
            <td>
                <input onclick="WdatePicker()" type="text" name="txtEndTime" id="txtEndTime" value="" />
            </td>
        </tr>
        <tr>
            <td>
                到期提醒：
            </td>
            <td>
                <input  type="text" name="txtRemind" id="txtRemind" value="" />
            </td>
        </tr>
        <tr>
            <td>
            </td>
            <td>
                <input type="button" name="btnAddSchool" id="btnAddSchool" value="确定" />
            </td>
        </tr>
    </table>
    <input type="reset" name="res" id="res" style="display: none" value="" />
    </form>
</div>
