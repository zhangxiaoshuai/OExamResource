@{
    ViewBag.Title = "修改学校试用";
    Layout = "~/Views/Shared/_Back.cshtml";
}
@section SubHead{
    <script src="@Url.Content("~/Scripts/views/manage/editschool.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugin/My97DatePicker/WdatePicker.js")" type="text/javascript"></script>
}
@model Sync.Models.School
<div id="divEditSchool">
    <input type="hidden" name="hdId" id="hdId" value="@Model.Id" />
    <table border="0" cellpadding="0" cellspacing="10" align="center" width="100%">
        <tr align="center">
            <td>
                <h2>
                    @Model.Name</h2>
            </td>
            <td>
            </td>
            <td>
            </td>
        </tr>
        <tr>
            <td width="20%" align="right">
                学校名称：
            </td>
            <td>
                <input type="text" name="txtSchoolName" id="txtSchoolName" value="@Model.Name" />
            </td>
            <td>
            </td>
        </tr>
        <tr>
            <td align="right">
                试用类型：
            </td>
            <td>
                @Html.DropDownList("ddlTrial", ViewBag.Trial as List<SelectListItem>)
            </td>
            <td>
            </td>
        </tr>
        <tr>
            <td align="right">
                选择模块：
            </td>
            <td>
                <div style="margin-left: 20px" id="divModules">
                </div>
            </td>
            <td>
            </td>
        </tr>
        <tr>
            <td align="right">
                IP地址：
            </td>
            <td colspan="2">
                <textarea rows="5" cols="32" id="txtIP" style="resize: none"></textarea>
                <br />
                多个IP地址请用 <strong style="color: Red">半角</strong> 逗号“ <strong style="color: Red">,</strong>
                ”分隔，如果是<br />
                连续的IP地址段请用“ <strong style="color: Red">-</strong> ”连接<br />
                （如192.168.0.0-192.168.0.100）。
            </td>
        </tr>
        <tr>
            <td align="right">
                开始时间：
            </td>
            <td>
                <label id="lbStartTime">@Model.StartTime.Value.ToString("yyyy-MM-dd")</label>
            </td>
            <td>
            </td>
        </tr>
        <tr>
            <td align="right">
                到期时间：
            </td>
            <td>
                <input onclick="WdatePicker()" type="text" name="txtEndTime" id="txtEndTime" value="@(Model.EndTime == null ? "" : ((DateTime)Model.EndTime).ToString("yyyy-MM-dd"))" />
            </td>
            <td>
            </td>
        </tr>
        <tr>
            <td align="right">
                到期提醒：
            </td>
            <td>
                <input type="text" name="txtRemind" id="txtRemind" value="@Model.StopRemind" />
            </td>
            <td>
            </td>
        </tr>
        <tr>
            <td align="right">
                销售人员：
            </td>
            <td>
                @Html.DropDownList("ddlSeller", ViewBag.Sell as List<SelectListItem>)
            </td>
            <td>
            </td>
        </tr>
        <tr>
            <td>
            </td>
            <td>
                <input type="button" name="btnEditSchool" id="btnEditSchool" value="确定" />
                &nbsp;&nbsp;&nbsp;&nbsp;<input type="button" name="btnEsc" id="btnEsc" value="返回" />
            </td>
            <td>
            </td>
        </tr>
    </table>
</div>
