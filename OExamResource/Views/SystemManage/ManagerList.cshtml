@{
    ViewBag.Title = "管理员管理";
    Layout = "~/Views/Shared/_Back.cshtml";
}
@section SubHead{
    <script src="@Url.Content("~/Scripts/views/manage/managerlist.js")" type="text/javascript"></script>
    <style type="text/css">
        #divUserList td
        {
            height: 20px;
        }
    </style>
}
<h2>
    管理员列表</h2>
<input type="hidden" name="hdSchoolId" id="hdSchoolId" value="@ViewBag.SchoolId" />
<input type="hidden" name="hdCount" id="hdCount" value="@ViewBag.count" />
<input type="hidden" name="hdId" id="hdId" value="@ViewBag.Id" />
<div align="center">
    <table width="100%" border="0" cellpadding="0" cellspacing="10">
        <tr>
            <td align="right">
                账号状态：
            </td>
            <td>
                <select id="ddlState">
                    <option value="-1" selected="selected">全部</option>
                    <option value="0">已启用</option>
                    <option value="1">已禁用</option>
                </select>
            </td>
            <td>
            </td>
        </tr>
        <tr>
            <td width="20%" align="right">
                帐号/姓名：
            </td>
            <td>
                <input type="text" name="txtName" id="txtName" value="" />
                <input type="button" name="btnSearchManager" id="btnSearchManager" value="搜索" />
            </td>
            <td>
                <input type="button" name="btnAddManager" id="btnAddManager" value="添加" />
            </td>
        </tr>
        <tr>
            <td colspan="3" align="center" style="vertical-align: top;">
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tr>
                        <td class="yan" valign="middle" align="left" style="height: 20px">
                            全部列表
                        </td>
                        <td class="yan" valign="middle" align="right">
                            共搜索出<strong id="sCount">@ViewBag.count</strong>条记录
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <div id="divUserList">
                            </div>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td align="center" colspan="3">
                <div id="divBar">
                </div>
            </td>
        </tr>
        <tr>
            <td width="20%" align="center">
                <input type="checkbox" name="ckAll" id="ckAll" /><label for="ckAll">全选</label>
                <input type="checkbox" name="ckReverse" id="ckReverse" /><label for="ckReverse">反选</label>
            </td>
            <td width="30%">
                <input type="radio" checked="checked" name="groupAff" value="0" id="rEnabled" /><label
                    for="rEnabled">启用</label>
                <input type="radio" name="groupAff" value="1" id="rDisabled" /><label for="rDisabled">停用</label>
                <input type="radio" name="groupAff" value="-1" id="rDelete" /><label for="rDelete">删除</label>
                <input type="button" name="btnAffirm" id="btnAffirm" value="确认操作" />
            </td>
            <td>
                <input type="button" name="btnEditSelected" id="btnEditSelected" value="修改选中" />
            </td>
            <td>
            </td>
        </tr>
    </table>
</div>
<div id="divAddManager" style="display: none">
    <table width="100%" border="0" cellpadding="0" cellspacing="10">
        <tr>
            <td align="right" valign="middle" style="width: 30%; height: 20px;">
                登录帐号：
            </td>
            <td width="58%" align="left" valign="middle" style="height: 20px">
                <input type="text" name="txtLoginName" id="txtLoginName" value="" />
            </td>
        </tr>
        <tr>
            <td align="right" valign="middle" style="width: 30%; height: 20px;">
                登录密码：
            </td>
            <td align="left" valign="middle">
                <input type="password" name="txtLoginPwd" id="txtLoginPwd" value="" />
            </td>
        </tr>
        <tr>
            <td align="right" valign="middle" style="width: 30%; height: 20px;">
                确认密码：
            </td>
            <td align="left" valign="middle">
                <input type="password" name="txtSurePwd" id="txtSurePwd" value="" />
            </td>
        </tr>
        <tr>
            <td align="right" valign="middle" style="width: 30%; height: 20px;">
                真实姓名：
            </td>
            <td align="left" valign="middle">
                <input type="text" name="txtTrueName" id="txtTrueName" value="" />
            </td>
        </tr>
        <tr>
            <td align="right" valign="middle" style="width: 30%; height: 20px;">
                学校：
            </td>
            <td>
                @Html.DropDownList("ddlSchool", ViewBag.School as List<SelectListItem>)
            </td>
        </tr>
        <tr>
            <td align="right" valign="middle" style="width: 30%; height: 20px;">
                所属学院：
            </td>
            <td align="left" valign="middle">
                @Html.DropDownList("ddlFaculty", ViewBag.Faculty as List<SelectListItem>)
            </td>
        </tr>
        <tr>
            <td align="right" valign="middle" style="width: 30%; height: 20px;">
                所属系别：
            </td>
            <td align="left" valign="middle">
                @Html.DropDownList("ddlDepartment", ViewBag.Department as List<SelectListItem>)
            </td>
        </tr>
        <tr>
            <td align="right" valign="middle" style="width: 30%; height: 20px;">
                角色类型：
            </td>
            <td align="left" valign="middle">
                @Html.DropDownList("ddlRole", ViewBag.Role as List<SelectListItem>)
            </td>
        </tr>
        <tr>
        </tr>
        <tr>
            <td align="right" valign="middle" style="height: 20px; width: 30%;">
            </td>
            <td align="left" valign="middle" style="height: 20px">
                <input type="button" name="btnAdd" id="btnAdd" value="添加" />
            </td>
        </tr>
    </table>
</div>
<form action="/SystemManage/MassEdit" method="post" id="form1">
<input type="hidden" id="hdData" name="hdData" value="" />
</form>
