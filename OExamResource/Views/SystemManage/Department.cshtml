@{
    ViewBag.Title = "院系管理";
    Layout = "~/Views/Shared/_Back.cshtml";
}
@section SubHead{
    <script src="@Url.Content("~/Scripts/views/manage/department.js")" type="text/javascript"></script>
    <style type="text/css">
        #divDepList td
        {
            height: 20px;
        }
    </style>
}
<h2>
    院系列表</h2>
<input type="hidden" name="hdId" id="hdId" value="@ViewBag.Id" />
<input type="hidden" name="hdCount" id="hdCount" value="@ViewBag.count" />
<input type="hidden" name="hdSchoolId" id="hdSchoolId" value="@ViewBag.SchoolId" />
<br />
<br />
<table width="100%" border="0" cellpadding="0" cellspacing="10">
    <tr @ViewBag.dis >
        <td width="20%" align="right" style="height: 20px">
            学校名称：
        </td>
        <td width="20%" align="left">
            @Html.DropDownList("ddlSchool", ViewBag.School as List<SelectListItem>)
        </td>
        <td width="10%">
        </td>
        <td width="10%">
        </td>
        <td>
        </td>
    </tr>
    <tr>
        <td align="right" style="height: 20px">
            院系名称：
        </td>
        <td align="left">
            <input type="text" name="txtName" id="txtName" value="" />
        </td>
        <td>
            <input type="button" name="btnSearchDep" id="btnSearchDep" value="搜索" />
        </td>
        <td>
            <input type="button" name="btnAddFac" id="btnAddFac" value="添加学院" />
        </td>
        <td>
            <input type="button" name="btnAddDep" id="btnAddDep" value="添加系别" />
        </td>
    </tr>
    <tr>
        <td colspan="5" align="center" style="vertical-align: top">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tr>
                    <td valign="middle" align="left" style="height: 20px">
                        全部列表
                    </td>
                    <td align="right">
                        共搜索出<strong id="sCount">@ViewBag.count</strong>条记录
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <div id="divDepList">
                        </div>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td align="center" colspan="5">
            <div id="divBar">
            </div>
        </td>
    </tr>
</table>
<div id="divAddDep" style="display: none">
    <table width="100%" border="0" cellpadding="0" cellspacing="10">
        <tr>
            <td align="right" valign="middle" style="width: 30%; height: 20px;">
                学院名称：
            </td>
            <td width="58%" align="left" valign="middle" style="height: 20px">
                <select id="ddlFac">
                </select>
            </td>
        </tr>
        <tr>
            <td align="right" valign="middle" style="width: 30%; height: 20px;">
                系别名称：
            </td>
            <td width="58%" align="left" valign="middle" style="height: 20px">
                <input type="text" name="txtNewDepName" id="txtNewDepName" value="" />
            </td>
        </tr>
        <tr>
            <td align="right" valign="middle" style="height: 20px; width: 30%;">
            </td>
            <td align="left" valign="middle" style="height: 20px">
                <input type="button" name="btnSureDep" id="btnSureDep" value="添加" />
            </td>
        </tr>
    </table>
</div>
<div id="divAddFac" style="display: none">
    <table width="100%" border="0" cellpadding="0" cellspacing="10">
        <tr>
            <td align="right" valign="middle" style="width: 30%; height: 20px;">
                学院名称：
            </td>
            <td width="58%" align="left" valign="middle" style="height: 20px">
                <input type="text" name="txtNewFacName" id="txtNewFacName" value="" />
            </td>
        </tr>
        <tr>
            <td align="right" valign="middle" style="height: 20px; width: 30%;">
            </td>
            <td align="left" valign="middle" style="height: 20px">
                <input type="button" name="btnSureFac" id="btnSureFac" value="添加" />
            </td>
        </tr>
    </table>
</div>
<div id="divEditDepFac" style="display: none">
    <input type="hidden" name="hdDepFacId" id="hdDepFacId" value="" />
    <input type="hidden" name="hdDepFacName" id="hdDepFacName" value="" />
    <table width="100%" border="0" cellpadding="0" cellspacing="10">
        <tr>
            <td align="right" valign="middle" style="width: 30%; height: 20px;">
                院系名称：
            </td>
            <td width="58%" align="left" valign="middle" style="height: 20px">
                <input type="text" name="txtEditDepFacName" id="txtEditDepFacName" value="" />
            </td>
        </tr>
        <tr>
            <td align="right" valign="middle" style="height: 20px; width: 30%;">
            </td>
            <td align="left" valign="middle" style="height: 20px">
                <input type="button" name="btnEditDepFac" id="btnEditDepFac" value="修改" />
            </td>
        </tr>
    </table>
</div>
