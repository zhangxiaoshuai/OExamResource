@{
    ViewBag.Title = "学习试题";
    Layout = "~/Views/Shared/_Empty.cshtml";
}
@section SubHead{
    <script src="@Url.Content("~/Scripts/views/exam/study.js")" type="text/javascript"></script>
    <style type="text/css">
        h1
        {
            text-align: center;
            margin: 30px auto;
        }
        .num_exam
        {
            border: 1px solid #fff;
            margin-bottom: 2px;
            display: inline;
            display: inline-block;
            width: 20px;
            text-align: center;
            color: #fff;
            background-color: #708ad5;
        }
        h2 a
        {
            color: #000;
            font-size: 14px;
        }
        #divNum
        {
            margin: 10px auto;
            width: 134px;
            height: 400px;
            overflow: auto;
        }
        dt, dd
        {
            line-height: 25px;
            white-space: pre-line;
        }
        dt
        {
            font-size: 18px;
            font-weight: bolder;
        }
        dd
        {
            padding-left: 20px;
        }
        #m_main
        {
            margin-left: 190px;
        }
        #divContent
        {
            width: 90%;
        }
        .lfloat
        {
            height: 100%;
            margin-left: 30px;
        }
        .rfloat
        {
            height: 100%;
            margin-right: 30px;
        }
        .bg1
        {
            background-image: url(/Content/image/bg1.png);
            width: 90px;
            height: 25px;
            border: none;
            cursor: pointer;
        }
        .l_bg
        {
            margin: 20px auto;
            text-align: center;
        }
        #l_main
        {
            top: 0px;
            width: 180px;
            height: 100%;
            position: fixed;
            background-color: #EFF1F7;
        }
        #r_main
        {
            background-color: #BBC7EB;
            color: #FFF;
            top: 50px;
            right: 0px;
            width: 150px;
            position: fixed;
            cursor: pointer;
        }
        #r_sub
        {
            background-color: #BBC7EB;
            right: 151px;
            top: 0px;
            width: 25px;
            height: 50px;
            cursor: pointer;
            position: absolute;
            color: #FFF;
            line-height: 50px;
            text-align: center;
        }
        /* 修正IE6 */
        * html, * html body
        {
            background-image: url(about:blank);
            background-attachment: fixed;
        }
        * html #l_main
        {
            position: absolute;
            left: expression(eval(document.documentElement.scrollLeft));
            top: expression(eval(document.documentElement.scrollTop));
        }
        * html #r_main
        {
            position: absolute;
            left: expression(eval(document.documentElement.scrollLeft+document.documentElement.clientWidth-this.offsetWidth)-(parseInt(this.currentStyle.marginLeft,10)||0)-(parseInt(this.currentStyle.marginRight,10)||0));
            top: expression(eval(document.documentElement.scrollTop+50));
        }
    </style>
}
@model Sync.Models.ExamPaper
<input type="hidden" id="hdId" value="@Model.Id"/>
<div style="display: none;" id="divTest">
    <div style="width: 800px; white-space: pre-line;">
    </div>
    <div style="margin: 0 auto; text-align: center; font-size: 36px; color: #fff; cursor: pointer;
        background-color: #BBC7EB; border: 1px dashed #fff;" class="divToggle">
        点击查看答案</div>
</div>
<div id="m_main">
    <h1>@Model.Name</h1>
    <div id="divContent">
    </div>
</div>
<div id="l_main">
    <div style="background: #BBC7EB; margin-top: 36px; line-height: 30px; text-align: center;
        font-weight: bold; margin-bottom: 10px;">@Model.Name</div>
    <table style="width: 100%;">
        <tr style="height: 50px;">
            <td style="text-align: right; width: 70px;">
                用户:
            </td>
            <td style="color: Red; text-align: left;">
                @if (ViewBag.UserInfo.Id == Guid.Empty)
                {
                    <text><a href="/Exam" style="color: Red;" target="_blank">未登录</a></text>
                }
                else
                {<text><label style="color: Red;">@ViewBag.UserInfo.Name</label></text>}
            </td>
        </tr>
        <tr style="height: 30px;">
            <td style="text-align: right; width: 70px;">
                总分:
            </td>
            <td style="text-decoration: underline;">
                <label id="lblScore">
                </label>
                分
            </td>
        </tr>
        <tr style="height: 30px;">
            <td style="text-align: right; width: 70px;">
                考试时间:
            </td>
            <td style="text-decoration: underline;">
                @{@Model.TimeOut}
                分钟
            </td>
        </tr>
        <tr style="height: 30px;">
            <td style="text-align: right;">
                试卷年月:
            </td>
            <td style="text-decoration: underline;">
                @{@Model.Year}
                .@{@Model.Month}
            </td>
        </tr>
        <tr style="height: 30px;">
            <td style="text-align: right;">
                学习用时:
            </td>
            <td style="text-decoration: underline;">
                <label style="color: #708AD5;" id="lblTime">
                </label>
            </td>
        </tr>
    </table>
    <div class="l_bg">
        <input type="button" id="btnLike" class="bg1" iscol="0" count="@ViewBag.Count" value="收藏" /></div>
    <div class="l_bg">
        <input type="button" id="btnTest" class="bg1" value="复习" /></div>
    <div class="l_bg">
        <input type="button" id="btnExam" class="bg1" value="模拟考试" /></div>
</div>
<div id="r_main">
    <div id="divNum">
    </div>
    <div id="r_sub">
        &gt;</div>
</div>
