<!DOCTYPE html>
@model Models.School
<html>
<head>
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Scripts/common/ie6.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/base.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Scripts/plugin/cellpagebar/pagebar.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery/jquery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/common/json2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugin/jtemplates/jquery-jtemplates.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/common/common.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/common/js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugin/artDialog/jquery.artDialog.js?skin=idialog")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugin/artDialog/artDialogExt.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugin/cellpagebar/pagebar.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/lan.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/plugin/My97DatePicker/WdatePicker.js")" type="text/javascript"></script>
    <script src="/Scripts/plugin/swfobject.js" type="text/javascript"></script>
    @RenderSection("SubHead", false)
    <script src="/Scripts/views/lan.js" type="text/javascript"></script>
</head>
<body>
    <div class="xxjm_head">
        <table width="100%" height="100" border="0" cellspacing="0" cellpadding="0">
            <tr>
                <td width="104" rowspan="2" height="105">
                    <img src="@(string.IsNullOrEmpty(Model.LogoImg) ? "/Images/lan/default/logo.png" : Model.LogoImg)" />
                </td>
                <td>
                    <img src="@(string.IsNullOrEmpty(Model.NameImg) ? "/Images/lan/default/name.png" : Model.NameImg)" />
                </td>
                <td align="right" valign="top">
                    <span id="acc_login" style="display: none;">
                        <button style="border: none; background: none; color: blue" id="btnLogin">
                            <img src="/Content/image/lan/16-circle-green.png" style="vertical-align: text-bottom;" />登陆</button>
                        <button style="border: none; background: none; color: blue" id="btnReg">
                            <img src="/Content/image/lan/16-circle-blue.png" style="vertical-align: text-bottom;" />注册</button>
                    </span><span id="acc_logout" style="display: none;">
                        <label>
                            欢迎您，<a id="lblUserName" href="/Account/Manage" target="_blank" style="color: red;"></a>&nbsp;</label>
                        <button style="border: none; background: none; color: blue" id="btnLogout">
                            <img src="/Content/image/lan/16-circle-orange.png" style="vertical-align: text-bottom;" />注销</button>
                    </span>
                    <button style="border: none; background: #FF8800; color: blue;" onclick="window.open('/');">
                        <img src="/Content/image/lan/16-archive.png" style="vertical-align: text-bottom;" />公共资源库</button>
                </td>
            </tr>
           @* <tr>
                <td style="padding-left: 230px;" colspan="2">
                    <img src="/Content/image/lan/xxjm_png_12.png" />
                </td>
            </tr>*@
        </table>
        <table width="100%" border="0" cellspacing="0" cellpadding="0" class="xxjm_navbg">
            <tr>
                <td width="600">
                    <ul>
                        @if (Model.Tier == 0 || Model.Tier == 1)
                        {
                            <li>
                                <div class="xxjm_nav_01" flag="nav_A">
                                    @(Model.Tier == 0 ? "学院" : "系别")
                                    <img src="/Content/image/lan/xxjm_png_08.png" height="10px" /></div>
                            </li>
                        }
                        <li>
                            <div class="xxjm_nav_01" flag="nav_B">
                                教师
                                <img src="/Content/image/lan/xxjm_png_08.png" height="10px" /></div>
                        </li>
                        <li>
                            <div class="xxjm_nav_01" flag="nav_C">
                                课程
                                <img src="/Content/image/lan/xxjm_png_08.png" height="10px" /></div>
                        </li>
                        <li>
                            <div class="xxjm_nav_01" flag="nav_D">
                                资源
                                <img src="/Content/image/lan/xxjm_png_08.png" height="10px" /></div>
                        </li>
                    </ul>
                </td>
                <td valign="top" align="right">
                    <table width="90%" border="0" cellspacing="0" cellpadding="0" class="xxjm_ss">
                        <tr>
                            <td class="xxjm_ss02">
                                <input type="text" placeholder="请输入课程名称/资源名称/教师名称" size="38" id="txtSearch" />
                            </td>
                            <td width="55">
                                <input type="image" src="/Content/image/lan/xxjm_png_06.png" id="btnSearch" />
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>
    @RenderBody()
    <div style="display: none; line-height: 30px;" id="acc_reg">
    </div>
    <div style="display: none;" id="acc_txt">
        <span style="background: url(/Content/image/lan/16-member.png) no-repeat left center;
            padding-left: 16px; display: -moz-inline-box; display: inline-block;">
            <input id="txtLoginName" type="text" style="width: 80px; border: none; background: none;
                border-bottom: 1px solid #000;" />
        </span>
        <br />
        <span style="background: url(/Content/image/lan/16-security-key.png) no-repeat left center;
            padding-left: 16px; display: -moz-inline-box; display: inline-block;">
            <input id="txtLoginPwd" type="password" style="width: 80px; border: none; background: none;
                border-bottom: 1px solid #000;" />
        </span>
    </div>
</body>
</html>
