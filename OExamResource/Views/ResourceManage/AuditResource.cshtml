@{
    ViewBag.Title = "资源审核";
    Layout = "~/Views/Shared/_Back.cshtml";
}
@section SubHead{
    <script src="@Url.Content("~/Scripts/views/manage/auditresource.js")" type="text/javascript"></script>
    <style type="text/css">
        #divResourceList td
        {
            height: 20px;
        }
    </style>
}
<h2>
    资源审核</h2>
<input type="hidden" name="hdCount" id="hdCount" value="@ViewBag.Count" />
<div align="left">
    <table width="100%" border="0" cellpadding="0" cellspacing="10">
        <tr>
            <td width="30%">
                素材分类：
                <select id="ddlcs">
                </select>
            </td>
            <td>
                所属专业：
                @Html.DropDownList("ddlSpe", ViewBag.Spe as List<SelectListItem>)
            </td>
        </tr>
        <tr>
            <td>
                素材类型：
                @Html.DropDownList("ddlType", ViewBag.Type as List<SelectListItem>)
            </td>
            <td>
                素材名称：
                <input type="text" name="txtName" id="txtName" value="" />&nbsp;
                <input type="button" name="btnSearchResource" id="btnSearchResource" value="搜索" />
            </td>
        </tr>
        <tr>
            <td colspan="2" align="center" style="vertical-align: top">
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tr>
                        <td class="yan" valign="middle" align="left" style="height: 20px">
                            全部列表
                        </td>
                        <td class="yan" valign="middle" align="right">
                            共搜索出<strong id="sCount">@ViewBag.Count</strong>条记录
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <div id="divResourceList">
                            </div>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td align="center" colspan="2">
                <div id="divBar">
                </div>
            </td>
        </tr>
        <tr>
            <td align="center">
                <input type="checkbox" name="ckAll" id="ckAll" /><label for="ckAll">全选</label>
                <input type="checkbox" name="ckReverse" id="ckReverse" /><label for="ckReverse">反选</label>
                <input type="button" name="btnAudit" id="btnAudit" value="通过审核" />
            </td>
            <td>
                <input type="button" name="btnDelete" id="btnDelete" value="删除选中" />
            </td>
        </tr>
    </table>
</div>
<div id="divPreview" style="display: none">
    <table border="1" cellpadding="0" cellspacing="0">
        <tr>
            <td align="center" id="tdPreview">
                <img src='/Images/source/file_zanwu_big.jpg' alt='' />
            </td>
        </tr>
    </table>
    <br />
    <br />
    <table border="0" cellpadding="0" cellspacing="0" width="50%">
        <tr>
            <td width="50%" align="center">
                <input type="hidden" name="hdResourceId" value="" id="hdResourceId" />
                <input type="button" name="btnAudit" id="Audit" value="通过" />
            </td>
            <td>
                <input type="button" name="btnAudit" id="Delete" value="删除" />
            </td>
        </tr>
    </table>
</div>
