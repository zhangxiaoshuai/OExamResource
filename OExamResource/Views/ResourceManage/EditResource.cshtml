@{
    ViewBag.Title = "修改资源信息";
    Layout = "~/Views/Shared/_Back.cshtml";
}
@section SubHead{
    <script src="@Url.Content("~/Scripts/views/manage/editresource.js")" type="text/javascript"></script>
}
@model Sync.Models.Resource

<input type="hidden" name="hdId" id="hdId" value="@Model.Id" />
<table border="0" cellpadding="0" cellspacing="10" style="width: 100%">
    <tr>
        <td width="30%" align="right" style="height: 22px">
            素材名称：
        </td>
        <td>
            <input type="text" name="txtResourceName" id="txtResourceName" value="@Model.Title" />
            (50字以内,必填)
        </td>
    </tr>
    <tr>
        <td align="right" style="height: 22px">
            素材类型：
        </td>
        <td>
            @Html.DropDownList("ddlType", ViewBag.Type as List<SelectListItem>)
        </td>
    </tr>
    <tr>
        <td align="right" style="height: 22px">
            素材分类：
        </td>
        <td>
            <select id="ddlcs">
                <option value="00000000-0000-0000-0000-000000000000" selected="selected">请选择</option>
            </select>
            (必选)
        </td>
    </tr>
    <tr>
        <td align="right" style="height: 22px">
            适用专业：
        </td>
        <td>
            @Html.DropDownList("ddlSpe", ViewBag.Spe as List<SelectListItem>)
        </td>
    </tr>
    <tr>
        <td align="right" style="height: 22px">
            知 识 点：
        </td>
        <td>
            @Html.DropDownList("ddlKnow", ViewBag.Know as List<SelectListItem>)
        </td>
    </tr>
    <tr>
        <td align="right" style="height: 22px">
            精品等级：
        </td>
        <td>
            @Html.DropDownList("ddlBoutiqueGrade", ViewBag.BoutiqueGrade as List<SelectListItem>)
        </td>
    </tr>
    <tr>
        <td align="right">
            素材介绍：
        </td>
        <td>
            <textarea id="txtFescribe" cols="30" rows="6" wrap="physical" style="resize: none;
                height: 80px; width: 380px">@Model.Fescribe</textarea>
        </td>
    </tr>
    <tr>
        <td align="right" style="height: 22px">
            关键字：
        </td>
        <td>
            <input type="text" name="txtKey" id="txtKey" value="@Model.KeyWords" />
            (多个标签请用逗号或空格分开，例：(科技 IT,语文)
        </td>
    </tr>
    <tr>
        <td colspan="2" align="center" style="height: 22px">
            <input type="button" name="btnSure" id="btnSure" value="确认修改" />&nbsp;&nbsp;&nbsp;
            <input type="button" name="btnEsc" id="btnEsc" value="返回" />
        </td>
    </tr>
</table>
