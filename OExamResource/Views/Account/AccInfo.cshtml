@model Models.UserView
<table width="100%" border="0" cellpadding="0" cellspacing="0" style="line-height: 40px;
    margin-top: 10px;">
    <tr>
        <td align="right" width="100">
            账号类型：
        </td>
        <td align="left" width="230">@(Model.Type == 0 ? "教师账号" : "普通账号")
        </td>
        <td align="right" width="100px">
            登录帐号：
        </td>
        <td align="left">
            @Model.LoginName
        </td>
    </tr>
    <tr>
        <td align="right">
            真实姓名：
        </td>
        <td align="left">
            @Model.Name
        </td>
        <td align="right">
            性&nbsp;&nbsp;&nbsp;&nbsp;别：
        </td>
        <td align="left">
            @Model.Sex
        </td>
    </tr>
    <tr>
        <td align="right">
            出生日期：
        </td>
        <td align="left" colspan="3">
            @(Model.Birthday == null ? "" : ((DateTime)Model.Birthday).ToString("yyyy-MM-dd"))
        </td>
    </tr>
    <tr>
        <td colspan="4">
            <hr />
        </td>
    </tr>
    <tr>
        <td align="right">
            学&nbsp;&nbsp;&nbsp;&nbsp;校：
        </td>
        <td align="left">
            @Model.School
        </td>
        <td align="right">
            学&nbsp;&nbsp;&nbsp;&nbsp;院：
        </td>
        <td align="left">
            @Model.Faculty
        </td>
    </tr>
    <tr>
        <td align="right">
            系&nbsp;&nbsp;&nbsp;&nbsp;别：
        </td>
        <td align="left" colspan="3">
            @Model.Department
        </td>
    </tr>
    <tr>
        <td colspan="4">
            <hr />
        </td>
    </tr>
    <tr>
        <td align="right">
            职&nbsp;&nbsp;&nbsp;&nbsp;业：
        </td>
        <td align="left">
            @Model.Profession
        </td>
        <td align="right">
            职&nbsp;&nbsp;&nbsp;&nbsp;称：
        </td>
        <td align="left">
            @Model.Job
        </td>
    </tr>
    <tr>
        <td align="right">
            职&nbsp;&nbsp;&nbsp;&nbsp;务：
        </td>
        <td align="left" colspan="3">
            @Model.Post
        </td>
    </tr>
    <tr>
        <td colspan="4">
            <hr />
        </td>
    </tr>
    <tr>
        <td align="right">
            电子邮箱：
        </td>
        <td align="left" colspan="3">
            @Model.Email
        </td>
    </tr>
    <tr>
        <td align="right">
            联系电话：
        </td>
        <td align="left" colspan="3">
            @Model.Phone
        </td>
    </tr>
    <tr>
        <td colspan="4">
            <hr />
        </td>
    </tr>
</table>
